{
  "compilerOptions": {
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "dist/",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".api/**/*.ts",
    ".api/**/*.d.ts"
  ]
}
